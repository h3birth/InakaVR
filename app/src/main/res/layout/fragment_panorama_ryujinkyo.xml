<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanoramaSelectFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/iv_top_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ryujinkyo_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4c000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_top_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_l"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l"
            android:layout_weight="1"
            android:text="竜神狭"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_2l" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_view_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_start" />
    </LinearLayout>

</FrameLayout>